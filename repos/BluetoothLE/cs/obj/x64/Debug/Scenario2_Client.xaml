<Page x:ConnectionId='1'
    x:Class="SDKTemplate.Scenario2_Client"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SDKTemplate"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="AttributeTemplate"                                               >
            <Grid x:ConnectionId='2' Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:ConnectionId='4'                      Style="{StaticResource ListItemTextStyle}" FontWeight="Bold" TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:ConnectionId='3'                                      Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12" HorizontalAlignment="Center" HorizontalScrollMode="Disabled" IsHorizontalRailEnabled="False" IsVerticalRailEnabled="False" VerticalScrollMode="Disabled" VerticalAlignment="Center" VerticalScrollBarVisibility="Disabled">
        <StackPanel Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" AreScrollSnapPointsRegular="True" >
                <TextBlock Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="10,10,10,10" ScrollViewer.VerticalScrollBarVisibility="Disabled" UseLayoutRounding="False" Canvas.ZIndex="-1">
                <Run Text="Scale Model: "/>
                <Run x:ConnectionId='11'                                                FontWeight="Bold"/>
                </TextBlock>
                <StackPanel>
                    <StackPanel Margin="20,20,20,20">
                        <TextBlock x:ConnectionId='10' x:Name="CharacteristicLatestValue" FontSize="48" Margin="10,10,10,10" Text="" TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel  VerticalAlignment="Bottom" HorizontalAlignment="Center" >
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='8' x:Name="CharacteristicReadButton" Content="T"
                        Visibility="Visible" Margin="10,10,10,10" Width="80" Height="50"                                       />
                        <Button x:ConnectionId='9' x:Name="Button1" Content="U"
                        Visibility="Visible" Margin="10,10,10,10" Width="80" Height="50"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='6' x:Name="Button2" Content="H"
                        Visibility="Visible" Margin="10,10,10,10" Width="80" Height="50"/>
                        <Button x:ConnectionId='7' x:Name="Button3" Content="R"
                        Visibility="Visible" Margin="10,10,10,10" Width="80" Height="50"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"  Height="120" Visibility="Collapsed">
                    <TextBlock x:ConnectionId='5' x:Name="textBlock" TextWrapping="Wrap" Text=""/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>



