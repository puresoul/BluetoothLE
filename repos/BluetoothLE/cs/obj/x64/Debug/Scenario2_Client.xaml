<Page x:ConnectionId='1'
    x:Class="SDKTemplate.Scenario2_Client"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SDKTemplate"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="AttributeTemplate"                                               >
            <Grid x:ConnectionId='2' Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:ConnectionId='4'                      Style="{StaticResource ListItemTextStyle}" FontWeight="Bold" TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:ConnectionId='3'                                      Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12" HorizontalAlignment="Center" HorizontalScrollMode="Disabled" IsHorizontalRailEnabled="False" IsVerticalRailEnabled="False" VerticalScrollMode="Disabled" VerticalAlignment="Center" VerticalScrollBarVisibility="Disabled">
        <StackPanel Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="0,10,0,0">
                Scale Model: <Run x:ConnectionId='12'                                                FontWeight="Bold"/>
            </TextBlock>
            

            <ComboBox x:ConnectionId='5' x:Name="ServiceList" Margin="0,10,0,0" PlaceholderText="Choose a service"
                                                               DisplayMemberPath="Name"
                                                                               SelectedIndex="-1"/>
            <ComboBox x:ConnectionId='6' x:Name="CharacteristicList" Margin="0,10,0,0" PlaceholderText="Choose a characteristic" Visibility="Visible"
                                                                       DisplayMemberPath="Name"
                                                                                      SelectedIndex="-1" />
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='10' x:Name="CharacteristicReadButton" Content="Read Value"                                                
                        Visibility="Collapsed" Margin="0,0,0,0"/>
                <Button x:ConnectionId='11' x:Name="ValueChangedSubscribeToggle" Content="Subscribe to value changes"                                                   
                        Visibility="Visible" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel x:ConnectionId='7' x:Name="CharacteristicWritePanel" Margin="0,10,0,0"  Visibility="Collapsed">
                <TextBox x:ConnectionId='9' x:Name="CharacteristicWriteValue" PlaceholderText="Enter text/number to send"/>
            </StackPanel>
            <TextBlock x:ConnectionId='8' x:Name="CharacteristicLatestValue" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>

